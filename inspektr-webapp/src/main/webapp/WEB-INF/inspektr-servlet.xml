<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
	<bean
		name="/viewLogEntries.html"
       	class="org.inspektr.webapp.controller.LogSearchRequestController">
       	<constructor-arg index="0" ref="logManager" />
	</bean>
	
	<bean
		name="/viewStatisticEntries.html"
		class="org.inspektr.webapp.controller.StatisticSearchRequestController">
		<constructor-arg index="0" ref="statisticManager" />
	</bean>
	
	<bean
		id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver"
		p:prefix="/WEB-INF/jsp/"
		p:suffix=".jsp"
		p:viewClass="org.springframework.web.servlet.view.JstlView" />
</beans>